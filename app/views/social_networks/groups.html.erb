			    <%#= react_component('chat/NewChatGroup', friends: @friends, flaggedProperties: @flagged_properties, userName: current_user.first_name, userEmail: current_user.email ) %>
			  </div>
			</div>
          <h5 class="card-top m-3">My Groups</h5>
          <div class="row m-0">
            <div class="col-sm-5 mb-4 mr-4">
              <div class="card">
                <div class="card-body pb-1">
                  <div class="head d-flex p-1 align-items-center">
                    <%#= image_tag("myfriends/Group/group1.png", style:'display: inline-block;', class: 'p-2') %>
                    <!-- <h5 class="card-title m-0">Emily, Justin, Ash</h5> -->
                    <% @friends.each do |f| %>
                    <%#= image_tag("myfriends/Group/group1.png", style:'display: inline-block;', class: 'p-2') %>
