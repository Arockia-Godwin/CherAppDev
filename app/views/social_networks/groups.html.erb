                    <%= image_tag(user.profile_image, style:'display: inline-block;height: 15vh;border-radius: 50%;', class: 'p-2') %>
                    <h5 class="card-title m-0" style="color: black;"><%= f[:full_name] %></h5>
                    <% end %>
                  </div>
                  <p class="mb-0 mt-1">Shared Files</p>
                  <div style="display:flex;">
                  	<% @flagged_properties.each do |prop| %>
                  	<%= image_tag(prop['photos'][0], style:'display: inline-block;height: 10vh;border-radius: 8px;margin-right: 3px;', class: 'group_images') %>
                  	<br>
                  	<%= image_tag(prop['photos'][1], style:'display: inline-block;height: 10vh;border-radius: 8px;margin-right: 3px;', class: 'group_images') %>
                  	<% end %>
                    <%#= image_tag("myfriends/Group/Group1_1.png", style:'display: inline-block;', class: 'group_images') %>
